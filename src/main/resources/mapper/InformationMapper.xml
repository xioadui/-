<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.enterprise.dao.IInformationDao">
    <resultMap id="BaseResultMap" type="com.enterprise.entity.Information">
        <result column="title" property="title" jdbcType="VARCHAR"/>
        <result column="date" property="date" jdbcType="DATE"/>
        <result column="header" property="header" jdbcType="VARCHAR"/>
        <result column="content" property="content" jdbcType="VARCHAR"/>
        <result column="digest" property="digest" jdbcType="VARCHAR"/>
    </resultMap>

    <insert id="save" parameterType="java.util.List">
        INSERT INTO infomation(title,date,header,content,digest)
        VALUES
        <foreach collection="info" item="item" index= "index" separator =",">
            (
            #{item.title,jdbcType=VARCHAR},
            #{item.date,jdbcType=VARCHAR},
            #{item.header,jdbcType=VARCHAR},
            #{item.content,jdbcType=VARCHAR},
            #{item.digest,jdbcType=VARCHAR}
            )
        </foreach>
    </insert>

    <select id="getAll" resultType="java.util.List">
        SELECT title, date, header, content, digest
        FROM infomation;
    </select>

</mapper>